  <div class="center-card">
    <div class="container text-center my-4 items-align-center">
     <div class="flex-row flex-direction">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left2 d-none d-md-flex">
            
         </div>
         <div class="card-body my-4">
          <h2>Créer un compte</h2>
          <br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field  :first_name, autofocus: true, autocomplete: "Nom" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field  :last_name, autofocus: true, autocomplete: "Prénom" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <br>
            <%= f.submit "Créer mon compte" %>
          </div>
          <% end %>
          <br>

          <p> Vous avez déjà un compte ?</p>
          <%= render "devise/shared/links" %>


        </div>
      </div>
    </div>
  </div>
</div>
</div>