
<div class="container bootstrap snippet my-5">
<h3>Les projets dont je suis l'organisateur :</h3>
<% if @projects[0] %>
    <div class="row my-4">
        <% @projects.each do |project| %>
        <div class="col-sm-6 my-2">
            <div class="card text-dark bg-light mb-3" style="max-width: 20rem;">
                <div class="card-header font-weight-bold"> <h4> <%= project.title.capitalize%> </h4> </div>
                <div class="card-body">
                    <p class="card-text"><%= project.start_date.strftime("Le %d/%m/%Y à %I:%M")%></p>
                    <p class="card-text"> Etat du projet : <%= project.state%></p>
                </div>
                <div class="card-body">
                <%= button_to "Terminer le projet", edit_project_path(project.id), method: 'get', class:"btn btn-sm btn-secondary"%>
                </div>
            </div>
        </div>
        <% end %>
    </div>  

    <% else %>
    <p class="my-5">Vous n'avez proposé aucun projet pour le moment.</p>
    <% end%>
    <hr>

</div>

 