<div class="container bootstrap snippet m-5">
<%= form_tag url_for(action: 'update'), method: "patch", id:"editForm", authenticity_token: true do %>
        <h2>Compléter mon profil</h2>
        <div class="form-group">
            <div class="col-xs-6">
              <%= label_tag 'Prénom :' %>
              <%= text_field_tag :first_name, @user.first_name, class:'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
              <%= label_tag 'Nom :' %>
              <%= text_field_tag :last_name, @user.last_name, class:'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
              <%= label_tag 'Email :' %>
              <%= text_field_tag :email, @user.email, class:'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
              <%= label_tag 'Mes compétences :' %>
              <%= text_field_tag :skill, @skill_setup_primary.skill.title, class:'form-control' %>
            </div>
        </div>
          <div class="form-group">
            <div class="col-xs-6">
              <%= label_tag 'Mes compétences :' %>
              <%= text_field_tag :skill, @skill_setup_secondary.skill.title, class:'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                  <br>
                  <%= submit_tag "Modifier mes informations personnelles", class:"btn btn-dark" %>
                  <hr>
                  <%= link_to "Modifier mes compétences", edit_user_path(@user.id), class:"btn btn-dark" %>
            </div>
        </div>
      <% end %>
  </div>    
      
      
