<div class="container bootstrap snippet m-5">
  <br>
  <div class="row m-5">

  <table class="table" style="width: 80%;">

      <tbody>
      
        <h2> Informations sur le participant </h2>
        <tr class="table-light" >
          <th scope="row" style="width: 20%" >Prénom : </th>
          <td><%= @user.first_name %></td>
        </tr>
        <tr class="table-light" >
          <th scope="row" >Nom : </th>
          <td><%= @user.last_name %></td>
        </tr>
        <tr class="table-light" >
          <th scope="row">Email : </th>
          <td><%=  @user.email %></td>
        </tr>
        <tr class="table-light" >
          <th scope="row">Admin : </th>
          <td><%=  @user.is_admin %></td>
        </tr>
        <tr class="table-light" >
          <th scope="row">Compte créé le : </th>
          <td><%=  @user.created_at %></td>
        </tr>
        
      </tbody>
  </table>
  </div>
  
  <div class="col m-5">
    <%= button_to "Modifier les informations de l'utilisateur", edit_admin_user_path(@user.id), class:"btn btn-dark", method:"get" %>
    <br> 
    <%= button_to "Supprimer l'utilisateur", admin_user_path(@user.id), class:"btn btn-danger", method:"delete", data: { confirm: 'Souhaitez-vous supprimer définitivement ce ?' } %>
  </div>

  </div>