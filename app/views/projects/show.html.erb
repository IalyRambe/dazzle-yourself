
<section class="product-shop spad page-details">
	<div class="container">
		<div class="row">
			<div class="col-lg-9">

				<div class="row">

					<div class="col-lg-6">

						<div class="product-pic-zoom">
							<img src="#">
						</div>
					</div>
					<div class="col-lg-6">
						<div class="product-details">
							<div class="pd-title">
								<h3> Projet : <%= @project.title.capitalize %> </h3>
								<br>
							</div>

							<div class="pd-desc">
								<% if user_signed_in?%>
								<% if @project.state == "published" ||  @project.state == "finished" %>
								<h6>Le projet en 2 mots </h6>
								<p><%= @project.short_description %> </p>
								<br>
								<h6>Description du project </h6>
								<p><%= @project.long_description %> </p>
								<br>
								<h6>Projet proposé par : </h6>
								<p><%= @project.owner.first_name %> <%= @project.owner.last_name %> </p>
								<br>
								<h6>Date </h6>
								<p>Début : <%= @project.start_date %> </p>
								<p>Fin : <%= @project.end_date %> </p>
								<h6>Nombre de place disponibles :  <%= @project.attendees_goal %></h6>
								<h6>Participants : </h6>
								<ul><% @project.attendees.each do |participant|%>
									<p><li><%= participant.first_name %> <%=participant.last_name %> </li></p>
									<% end %> 
								</ul>

								<br>

								<h6>Prix </h6>
								<p><%= @project.package.price_attendee %>€</p>
								<br>
								<%= button_to "Participer", new_project_attendance_path(@project.id), class:"btn btn-primary btn-small text-uppercase js-scroll-trigger"%>
								<br>
								<br>
								<p><%= button_to "Voir les autres projets", projects_path, method: 'get', class:"btn btn-secondary" %></p>
								<% end %> 

								<% if current_user == @project.owner%>
								<p> État du projet : <%= @project.state %></p>
								<% if @project.state == "draft" %>
								<%= link_to "Modifier le projet", edit_project[:id]%>
								<% end %> 
								<%= link_to "Créer un nouveau projet", new_project_path%>

								<% end %>

								<% else %>
								<h6>Le projet en 2 mots </h6>
								<p><%= @project.short_description %> </p>
								<br>
								<h6>Date </h6>
								<p>Début : <%= @project.start_date.strftime("le %d/%m/%Y à %I:%M") %> </p>
								<p>Fin : <%= @project.end_date.strftime("le %d/%m/%Y à %I:%M") %> </p>
								<h6>Prix </h6>
								<p><%= @project.package.price_attendee %>€</p>
								<br>
								<p><%= button_to " Pour en savoir plus ou vous inscrire, connectez-vous", user_session_path, method: 'get', class:"btn btn-primary" %></p>
								<p><%= button_to "Voir les autres projets", projects_path, method: 'get', class:"btn btn-secondary" %></p>
								<% end %>


							</div>

						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
</section>