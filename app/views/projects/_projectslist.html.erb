
<div class="album py-5 mt-5 bg-light">
    <div class="row">
    <div class="col-md-2">
    <p class="mx-4 mt-5 mb-2 font-weight-bold text-uppercase"> Categories : </p>
    <% @tags.sort_by(&:name).each do |tag| %>
      <p class="mx-4 my-1"><small><%= link_to "#{tag.name}", tag_path(tag.name), :class =>"" %></small></p>
      <% end %>
    </div>
    <div class="col-md-10">
    <div class="my-3 text-center">
      <h2 class="text-uppercase"> Projets à venir <h2>
    </div>
      <div class="container my-4">
          <div class="row my-4">
            <% @projects.sort_by(&:start_date).each do |project| %>
              <% if project.state == "published" %>
                <%= render 'project_card', project: project %>
              <%end %>
            <%end %>
          </div>
      </div>
    <hr class="my-5">
    <div class="my-3 text-center">
      <h2 class="text-uppercase">Projets passés<h2>
    </div>
    <div class="container my-4">
        <div class="row my-4">
          <% @projects.sort_by(&:start_date).each do |project| %>
            <% if project.state == "finished" %>
              <%= render 'project_card', project: project %>
            <%end %>
          <%end %>
        </div>
    </div>
    </div>
</div>






