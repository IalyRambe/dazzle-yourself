
  <div class="col-md-4"> 
    <div class="card mb-4 shadow-sm", style="height: 100%;">
      <%= link_to project_path(project.id) do %>
      <%= image_tag ('https://images.unsplash.com/photo-1531297484001-80022131f5a1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1607&q=80'), alt: "runstart", width: 348, height: 224 %>   
      <%end%>
      <div class="card-body">
          <h5 class="card-title"><%= project.title%></h5>
          <h6 class="card-title"><%= project.start_date.strftime("le %d/%m/%Y à %I:%M")%></h6>
          <p class="card-text"><%= project.short_description.truncate(100) %></p>
          <div class="d-flex justify-content-between align-items-center">

          <%if project.state == "published" %>
            <% if @project.full? %>
              <p> COMPLET </p>
            <% elsif user_signed_in? %>
              <% if current_user.is_available?(@project) == false %>
                <p>-</p>
              <% elsif @user_attendance %>
                <p>>Inscrit</p>
              <%end%>
            <% else %>
                <%= button_to "S'inscrire à ce projet", new_project_attendance_path(@project.id), method: 'get', class:"btn btn-primary"%>
            <% end %>
           <%end%>

            <%= link_to "En savoir plus", project_path(project.id), :class =>"btn btn-sm btn-dark" %>
            <div class="text-muted"> 
              <small><%= project.attendees.count%> inscrits</small>
            </div>
          </div>
      </div>
    </div>
  </div>




