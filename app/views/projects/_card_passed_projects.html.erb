
<% @projects.each.with_index(1) do |project| %>
  <% if project.start_date < Time.now %>
  <div class="col-md-4"> 
    <div class="card mb-4 shadow-sm ">
      <%= image_tag ('https://images.unsplash.com/photo-1531297484001-80022131f5a1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1607&q=80'), alt: "runstart", width: 348, height: 224 %>   
      <div class="card-body">
          <h5 class="card-title"><%= project.title%></h5>
          <h6 class="card-title"><%= project.start_date.strftime("%d. %B")%></h6>
          <p class="card-text"><%= project.short_description %></p>
          <div class="d-flex justify-content-between align-items-center">
          <%= link_to "En savoir plus", root_path, :class =>"btn btn-sm btn-dark" %>
          <div class="text-muted"> 
          <small><%= project.attendees.count%></small>
          </div>
          </div>
      </div>
    </div>
  </div>
<%end %>
<%end %>









