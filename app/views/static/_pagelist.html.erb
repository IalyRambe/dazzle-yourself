<!-- Projects Grid -->
<section class="page-section">
<div class="bg-light page-section" id="portfolio">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-lg-12 text-center">
      <br>  
      <h2 class="section-heading text-uppercase"> C'est parti pour une aventure ! </h2>

        <%button_to 'Voir tous les projets', projects_path, method: 'get', class:"btn btn-info btn-lg active" %>
        <hr>
        <h3 class="section-subheading text-muted">Quelques exemples de projets</h3>
      </div>
    </div>

    <div class="row">
      <% @projects[0...3].each do |project| %>
        <% if project.state == "published" %>
          <%= render 'projects/project_card', project: project %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-5 mb-5">
  <%= render 'layouts/CTA_attendee' %>
  </div>
</div>
</section>
